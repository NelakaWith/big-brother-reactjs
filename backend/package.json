{
  "name": "big-brother-backend",
  "version": "1.0.0",
  "description": "Big Brother monitoring dashboard backend API",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node utils/setup.js",
    "generate-password": "SETUP_PASSWORD=${npm_config_password} npm run setup",
    "db:migrate": "node utils/migrate.js",
    "db:seed": "node utils/seed.js",
    "db:reset": "node utils/reset-db.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "keywords": [
    "monitoring",
    "pm2",
    "dashboard",
    "vps"
  ],
  "author": "Big Brother Dashboard",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pm2": "^5.3.0",
    "tail": "^2.2.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
